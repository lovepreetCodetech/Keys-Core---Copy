<script type="text/html" id="statusForm">
      
      
        <div class="input-group">
            <label class="col-sm-3 ">Percent Done:</label>
            <div class="col-sm-12">
                <div class="form-line">
                    <select class="form-control" data-bind="value: PercentDone" style="padding-top:2px!important;padding-bottom:2px!important;width:520px;">
                        
                        <option value="0">0%</option>
                        <option value="10">10%</option>
                        <option value="20">20%</option>
                        <option value="30">30%</option>
                        <option value="40">40%</option>
                        <option value="50">50%</option>
                        <option value="60">60%</option>
                        <option value="70">70%</option>
                        <option value="80">80%</option>
                        <option value="90">90%</option>
                        <option value="100">100%</option>
                    </select>
                </div>
            </div>
        </div>


    <div class="input-group">
        <label class="col-sm-3">Message:</label>
        <div class="col-sm-12">
            <textarea class="form-control" data-bind="value: Note" maxlength="500" rows="6" cols="70" required></textarea>
            <p>Maximum of 500 characters</p>
        </div>
    </div>

  
</script>


