<div id="addCompany" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="lead modal-title text-center">Add new company</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div class="form-group">
                        <label class="keys control-label col-sm-3">Name <span style="color:red;">*</span></label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="Cname" placeholder="Company Name" data-bind="value: Name" />
                        </div>
                    </div>
                    <div class="form-group">                        
                        <label class="keys control-label col-sm-3">Website <span style="color:red;">*</span></label>
                        <div class="col-sm-9">
                            <input type="text" class="form-control" id="Cwebsite" placeholder="Company Website" data-bind="value: Website" />
                        </div>
                    </div>
                    <p class="lead text-center">Physical Address</p>
                    <div data-bind="with: PhysicalAddress">
                        <div data-bind="template:{name:'editAddress'}"></div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-1">
                            <input data-bind="checked: isShipSame" name="shipsame" id="isShipSame" type="checkbox">
                        </div>
                        <label for="shipsame" class="col-sm-9">Billing address is the same as the physical address</label>
                    </div>
                    <div data-bind="visible: isShipDifferent">
                        <p class="lead text-center">Billing Address</p>
                        <div data-bind="with: BillingAddress">
                            <div data-bind="template:{name:'editAddress'}"></div>
                        </div>
                        </div>
                    </form>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal" data-bind="click: clearValidations">Cancel</button>
                <button type="button" class="btn btn-success" data-dismiss="modal" data-bind="click: $parent.save,disable: toggleDisable">Submit</button> 
            </div>
        </div>
    </div>
</div>


@{
    Html.RenderPartial("_EditAddress");
}

@section scripts{
    @Scripts.Render("~/Scripts/Companies/companyIndex.js")
}
