<head>
    <style>
        button.btn.btn-success:focus{
            border: 2px solid;
            border-color:#0e761c;
        }
    </style>
</head>
<div class="modal fade" role="dialog" data-bind="with: currentUser" id="editUserModal">
    <div class="modal-dialog" role="document">
        <div id="userEdit" class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" @*data-bind="click:ResetAll"*@ aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="lead modal-title text-center" style="margin-top:10px;">Edit User</h4>
            </div>
            <div class="modal-body">
                <form class="form-horizontal">
                    <div data-bind="template: {name: 'editForm'}"></div>
                    <p class="lead text-center">Physical Address</p>
                    <div data-bind="with: PhysicalAddress">
                        <div data-bind="template:{name:'editAddress'}"></div>
                    </div>

                    <div>

                        <input type="checkbox" name="BillingAddress" id="BillingAddressCheckbox" value="1" class="filled-in chk-col-pink" data-bind="checked: IsShipSame, click: $root.ResetAddress" />
                        <label for="BillingAddressCheckbox">Same Billing Address</label>

                    </div>
                    <div data-bind="ifnot: IsShipSame,AddCss: $data">
                        <p class="lead text-center">Billing Address</p>
                        <div data-bind="with: BillingAddress">
                            <div data-bind="template:{name:'editAddress'}"></div>
                        </div>
                    </div>

                   @* <div class="col-sm-12" data-bind="click: ResetAddress">
                        @*<div class="col-sm-offset-2 col-sm-1">
                            
                            <div class="">
                                <div data-bind="ifnot: IsShipSame">
                                    <input type="checkbox" class="filled-in chk-col-pink">
                                </div>
                            </div>

                                <div class="">
                                    <div data-bind="if: IsShipSame">
                                          <input type="checkbox"  class="filled-in chk-col-pink">
                                        <label class="col-sm-9">Different Billing Address</label>
                                    </div>
                                </div>

                   
                            <div class="">
                                <div data-bind="ifnot: IsShipSame">
                                    <input type="checkbox"   class="filled-in chk-col-pink">
                                    <label class="col-sm-9" >Same Billing Address</label>
                                </div>
                             </div>


                           
                    </div>*@
                    @*<div data-bind="ifnot: IsShipSame,AddCss: $data">
                        <p class="lead text-center">Billing Address</p>
                        <div data-bind="with: BillingAddress">
                            <div data-bind="template:{name:'editAddress'}"></div>
                        </div>
                    </div>*@
                </form>
            </div>
            <div class="modal-footer">
                @*,disable: ToggleDisable*@
                <button type="button"  class="btn btn-success" data-toggle="modal" data-bind="click:$root.SaveUser, disable: ToggleDisable" >Save changes</button>
                @*<button type="button" class="btn btn-danger" data-dismiss="modal" data-bind="click: ResetAll">Cancel</button>*@
                <button  type="button" class="btn btn-danger" @*data-bind="click:ResetAll"*@ data-dismiss="modal">Cancel </button>
            
            </div>
        </div>
    </div>
</div>
<div id="SaveModal" class="modal fade" role="dialog">
    <div class="modal-dialog">
        <!-- Modal content-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title" style="color:red">Changes saved successfully!</h4>
            </div>
            <div class="modal-footer">
            <button type="button" class="btn btn-success" data-dismiss="modal" >OK</button>
            </div>
        </div>
    </div>
</div>
