@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <div class="carousel slide">
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <img src="~/images/AucklandView.jpg" class="img-responsive" alt="Home Page" />
                <div class="carousel-caption">
                    <h1 class="hidden-md hidden-sm hidden-xs">
                        Manage your Property the Easy Way
                    </h1>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="col-xs-12">
    <h2 class="text-center offset-bottom3">We will help you grow and maintain your business...</h2>

    <div class="col-xs-offset-2 col-xs-2 text-center active" data-target="#carousel-home" data-slide-to="0">
        <i class="fa fa-clock-o fa-4x" aria-hidden="true"></i>
        <h3>Save Time</h3>
    </div>
    <div class="col-xs-2 text-center" data-target="#carousel-home" data-slide-to="1">
        <i class="fa fa-globe fa-4x" aria-hidden="true"></i>
        <h3>Work Anytime, Anywhere</h3>
    </div>
    <div class="col-xs-2 text-center" data-target="#carousel-home" data-slide-to="2">
        <i class="fa fa-usd fa-4x" aria-hidden="true"></i>
        <h3>Save Money</h3>
    </div>
    <div class="col-xs-2 text-center" data-target="#carousel-home" data-slide-to="3">
        <i class="fa fa-handshake-o fa-4x" aria-hidden="true"></i>
        <h3>Collaborate</h3>
    </div>
</div>
<div class="col-xs-12 my-carousel-wrapper">
    <div id="carousel-home" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            <div class="item active">
                <div class="carousel-caption col-xs-6">
                    <img src="~/images/Accounting-Automation.png" alt="Accounting" class="img-responsive img-thumbnail" />
                    <h2>Automate daily tasks</h2>
                    <p>
                        <a class="btn btn-large btn-success" href="#">Learn more</a>
                    </p>
                </div>
            </div>
            <div class="item">
                <div class="carousel-caption col-xs-6">
                    <img src="~/images/Cloud.png" alt="Accounting" class="img-responsive img-thumbnail" />
                    <h2>A cloud-based solution</h2>
                    <p>
                        <a class="btn btn-large btn-success" href="#">Learn more</a>
                    </p>
                </div>
            </div>
            <div class="item">
                <div class="carousel-caption col-xs-6">
                    <img src="~/images/bw-toolbox.jpg" alt="Accounting" class="img-responsive img-thumbnail" />
                    <h2>All the essentials in one app</h2>
                    <p>
                        <a class="btn btn-large btn-success" href="#">Learn more</a>
                    </p>
                </div>
            </div>
            <div class="item">
                <div class="carousel-caption col-xs-6">
                    <img src="~/images/people.jpg" alt="Accounting" class="img-responsive img-thumbnail" />
                    <h2>Seamless communication</h2>
                    <p>
                        <a class="btn btn-large btn-success" href="#">Learn more</a>
                    </p>
                </div>
            </div>
        </div>
        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-home" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-home" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
    <div class="my-carousel-content-wrapper">
        <div class="my-carousel-content">
            
        </div>
    </div>
</div>