@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", new { area = "" }, FormMethod.Post, new { id = "logoutForm" }))
    {
        @Html.AntiForgeryToken()

        <ul class="nav nav-pills nav-stacked">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">
                    <i class="fa fa-cogs fa-3x" aria-hidden="true"></i>
                    <h4 class="display-inline offset-left2 ">Account</h4>
                    <span class="caret"></span>
                </a>
                <ul class="dropdown-menu" role="menu">
                    <li>@Html.ActionLink("Change Password", "ChangePassword", "Account", new { area = "" }, htmlAttributes: new { id = "ChangePasswordLink" })</li>
                    <li><a href="javascript:document.getElementById('logoutForm').submit()">Log off</a></li>
                </ul>
            </li>
        </ul>
    }
}
else
{
    <ul class="nav nav-pills nav-stacked">
        <li>
            <a id="registerLink" href=@Url.Action("Register","Account")>
                <i class="fa fa-keyboard-o fa-3x" aria-hidden="true"></i>
                <h4 class="display-inline offset-left2 hidden-md hidden-sm hidden-xs">Register</h4>
            </a>
        </li>

        <li>
            <a id="loginLink" href=@Url.Action("Login","Account")>
                <i class="fa fa-key fa-3x" aria-hidden="true"></i>
                <h4 class="display-inline offset-left2 hidden-md hidden-sm hidden-xs">Login</h4>
            </a>
        </li>

    </ul>
}
